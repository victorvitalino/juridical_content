= simple_form_for @article do |f|
  .row
    .col-md-12
      = f.input :title, label: false, placeholder: "Título do Artigo..."

  .row
    .col-md-12
      .note-content
        = f.input :content, label: false, input_html: { class: 'redactor', placeholder: 'Conteúdo do Artigo...'}
  %hr/
  .row
    .col-md-12
      = f.submit "Salvar meu artigo", class: 'btn btn-success'
      = link_to "Voltar", articles_path, class: 'btn btn-default'
                
       